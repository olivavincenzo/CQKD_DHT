# DHT Configuration
DHT_PORT=5678
BOOTSTRAP_NODES=127.0.0.1:5678
NODE_TYPE=worker

# DHT Scalability (per grandi reti)
DHT_KSIZE=4
BOOTSTRAP_TIMEOUT_SECONDS=60
MAX_CONCURRENT_DISCOVERY=100
DISCOVERY_BATCH_SIZE=15
MAX_DISCOVERY_TIME=120

# Protocol Configuration
KEY_LENGTH_MULTIPLIER=2.5
REQUIRED_NODES_MULTIPLIER=5

# Security
ENABLE_CHANNEL_ENCRYPTION=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text

# Performance
MAX_RETRIES=5
REQUEST_TIMEOUT_SECONDS=60

# Monitoring
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090

